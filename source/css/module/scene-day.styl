.scene-day
	//

.showtime
	size: 100%
	position: relative

.showtime__control
	align(vertical)
	height: 90px
	width: 45px
	background-color: rgba(255,255,255,0.9)
	cursor: pointer
	z-index: 10

	svg
		align(both)
		size: 25px auto

.showtime__control--prev
	@extend .showtime__control
	left: 0
	border-radius: 0 90px 90px 0

.showtime__control--next
	@extend .showtime__control
	right: 0
	border-radius: 90px 0px 0px 90px

.slide
	align(both)
	size: 90% 75%
	padding: 20px
	background: white
	overflow: scroll
	box-shadow: 0px 0px 10px #777

	+above($media.medium)
		align(horizontal)
		size: 60%
		top: 15%

.slide--1
	@extend .slide
	background-color: white

.slide--2
	@extend .slide
	background-color: white

.slide--3
	@extend .slide
	background-color: white

.slide__title
	width: 100%
	margin: 20px auto
	padding-bottom: 5px
	border-bottom: 1px dashed black
	font-size: 30px
	text-align: center

	+above($media.medium)
		max-width: 150px

.slide__body
	padding: 0 20px
	font-size: 16px
	line-height: 18px

	+above($media.medium)
		padding: 0 20px

.slide__body p
	margin: 20px auto

	+above($media.medium)
		margin: 10px auto

.slide__address
	width: 100%
	font-size: 18px
	line-height: 20px
	margin: 0 auto

	+above($media.medium)
		width: 175px

.slide__link
	color: $color.turq

.slide__list
	margin-left: 20px
	list-style-type: square

hr
	width: 50%
	margin: 20px auto
	border: 0
	border-top: 1px solid #ccc

// flowers
.flower
	position: absolute
	background: no-repeat center
	background-size: cover

.flower--13
	@extend .flower
	size: 57px 85px
	bottom: 0
	right: 0
	background-image: url("../img/flower_13_flip.png")
