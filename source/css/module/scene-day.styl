.scene-day
	background-image: linear-gradient(0deg, #F3F0FF, #B2D6EB)

// sun
path
	stroke-dasharray: 100
	stroke-dashoffset: 100

// greeting
.greeting
	align(both)
	size: 75%
	text-align: center

	+above($media.medium)
		size: 50%
