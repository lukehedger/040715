.scene
	height: 100%
	position: relative
	z-index: 2

.stage__control
	align(horizontal)
	z-index: 99

.stage__control--prev
	@extend .stage__control
	top: 10px

.stage__control--next
	@extend .stage__control
	bottom: 10px
