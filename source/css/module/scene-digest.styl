.scene-digest
	// 

.showtime
	size: 100%
	position: relative

.showtime__control
	align(vertical)
	z-index: 10

.showtime__control--prev
	@extend .showtime__control
	left: 0

.showtime__control--next
	@extend .showtime__control
	right: 0

.slide
	align(both)
	size: 100%
	background: white

	+above($media.medium)
		size: 75%

.slide--1
	@extend .slide
	background-color: $color.pink

.slide--2
	@extend .slide
	background-color: $color.yellow

.slide--3
	@extend .slide
	background-color: $color.turq

.flower
	size: 170px 120px
	background: url("../img/floral.png") no-repeat -800px -227px
	absolute: bottom 0 left 0
